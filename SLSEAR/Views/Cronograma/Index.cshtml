
@{
    ViewBag.Title = "Index";
}

<br />
<input type="hidden" id="hdnusuario" value="@ViewBag.usuario" />
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header cardheadertitle">
                <h4 class="card-title">
                    Cronograma Detallado
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12 col-md-12" style="text-align:right">
                        <button type="button" class="btn btn-success" id="btnagregar"><i class="fa fa-plus-circle me-2" aria-hidden="true"></i> Agregar</button>
                    </div>
                </div>
                <table class="table table-bordered text-nowrap border-bottom dataTable" id="tblcronograma">                 
                </table>
                <div class="row">
                    <div class="col-sm-12 col-md-12" style="text-align:right">
                        <button type="button" class="btn btn-success" id="btnvistaprevia"><i class="fa fa-plus-circle me-2" aria-hidden="true"></i> Vista Previa</button>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
<div class="modal fade" id="modalcronograma" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg " role="document">
        <div class="modal-content">
            <div class="modal-header cardheadertitle">
                <h5 class="modal-title">Agregar Detalle</h5>
                <button class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-8 col-md-12">
                        <label class="form-group">
                            <label class="form-label">Componente<span class="text-red"></span></label>
                            <select class="form-select leading-none" id="cboComponente">
                                <option selected="" value="">Seleccione</option>                             
                            </select>
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-8 col-md-12">
                        <label class="form-group">
                            <label class="form-label">Actividad<span class="text-red"></span></label>
                            <select class="form-select leading-none" id="cboActividad">
                                <option selected="" value="">Seleccione</option>
                            </select>                            
                        </label>
                    </div>
                </div>              
                <div class="row">
                    <div class="col-sm-8 col-md-4">
                        <div class="form-group">
                            <label class="form-label">Actividad - Meta</label>
                            <input type="text" class="form-control mayuscula" readonly disabled placeholder="Actividad - Meta" id="vmetaactividad">
                        </div>
                    </div>
                </div>
                <div class="row">                 
                    <div class="col-sm-8 col-md-4">
                        <div class="form-group">
                            <label class="form-label">Meta<span class="text-red">*</span></label>
                            <input type="text" class="form-control mayuscula" placeholder="Meta" id="vmeta">
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <div class="form-group">
                            <label class="form-label">Dia<span class="text-red">*</span></label>
                            <input class="form-control fc-datepicker hasDatepicker" placeholder="MM/DD/YYYY" type="date" id="vdia">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal" id="btncerrar">Cerrar</button>
                <button class="btn btn-primary" id="btnguardardetalle" type="submit">Guardar</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modaleliminarcronograma" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Anular Cronograma</h5>
                <button class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <span>Esta Seguro de eliminar el detalle ?</span>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal" id="btncerrar">Cerrar</button>
                <button class="btn btn-primary" id="btneliminarproductor" type="button">Ok</button>
            </div>
        </div>
    </div>
</div>
