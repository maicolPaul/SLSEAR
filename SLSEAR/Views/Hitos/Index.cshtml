
@{
    ViewBag.Title = "Index";
}


<input type="hidden" id="hdnusuario" value="@ViewBag.usuario" />

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header cardheadertitle">
                <h4 class="card-title">Hitos</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <h4>Ejecución Técnica Financiera</h4>
                </div>
                <hr />
                <div class="row">
                    <h4>Plan Capacitacion</h4>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label class="form-label">Componentes</label>
                            <select class="form-control form-select select2" data-bs-placeholder="Seleccione" id="cboComponente">
                                <option label="Seleccione">Seleccione</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label class="form-label">Actividades</label>
                            <select class="form-control form-select select2" data-bs-placeholder="Seleccione" id="cboActividades">
                                <option label="Seleccione">Seleccione</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <hr />
                </div>

                <div class="row">
                    <h4>Lista de Plan de Capacitación</h4>
                    <table class="table table-bordered text-nowrap border-bottom dataTable" id="tblPlanCapa">
                    </table>
                </div>
                <div class="row">
                    <h4>Costos - Plan Capacitación</h4>
                    <table class="table table-bordered text-nowrap border-bottom dataTable" id="tblcosto">
                    </table>
                </div>
                <div class="row">
                    <hr />
                </div>
                <div class="row">
                    <h4>Plan Asistencia Técnica</h4>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label class="form-label">Componentes</label>
                            <select class="form-control form-select select2" data-bs-placeholder="Seleccione" id="cboComponentePlanAT">
                                <option label="Seleccione">Seleccione</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label class="form-label">Actividades</label>
                            <select class="form-control form-select select2" data-bs-placeholder="Seleccione" id="cboActividadesPlanAT">
                                <option label="Seleccione">Seleccione</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <h4>Lista de Asitencia Tecnica</h4>
                    <table class="table table-bordered text-nowrap border-bottom dataTable" id="tblAsist">
                    </table>
                </div>
                <div class="row">
                    <h4>Costos - Asitencia Tecnic</h4>
                    <table class="table table-bordered text-nowrap border-bottom dataTable" id="tblcostoPlanAT">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalproductores" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Listado de Productores</h5>
                <button class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <h4>Productores</h4>
                    <div class="col-sm-6 col-md-4">
                        <div class="form-group">
                            <label id="lblfecha" class="form-label">Fecha Inicio</label>
                            <input class="form-control fc-datepicker hasDatepicker" placeholder="MM/DD/YYYY" type="date" id="dfechacapa">
                        </div>
                    </div>
                    <table class="table table-bordered text-nowrap border-bottom dataTable" id="tblproductores">
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal" id="btncerrar">Cerrar</button>
                <button class="btn btn-primary" id="btneliminarefectodirecto" type="button">Ok</button>
            </div>
        </div>
    </div>
</div>
