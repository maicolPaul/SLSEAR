
@{
    Layout = null;
}

<!doctype html>
<html lang="en" dir="ltr">

<head>

    <!-- META DATA -->
    <meta charset="UTF-8">
    <meta name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=0'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="SEAR - Sistema de Servicios de Extensión Agraria Rural">
    <meta name="author" content="Spruko Technologies Private Limited">
    <meta name="keywords" content="admin,admin dashboard,admin panel,admin template,bootstrap,clean,dashboard,flat,jquery,modern,responsive,premium admin templates,responsive admin,ui,ui kit.">

    <!-- FAVICON -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/assets/images/brand/favicon.ico" />

    <!-- TITLE -->
    <title>SEAR - Sistema de Servicios de Extensión Agraria Rural</title>

    <!-- BOOTSTRAP CSS -->
    <link id="style" href="~/Content/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- STYLE CSS -->
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/css/dark-style.css" rel="stylesheet" />
    <link href="~/Content/assets/css/transparent-style.css" rel="stylesheet">
    <link href="~/Content/assets/css/skin-modes.css" rel="stylesheet" />

    <!--- FONT-ICONS CSS -->
    <link href="~/Content/assets/css/icons.css" rel="stylesheet" />

    <!-- COLOR SKIN CSS -->
    @*<link id="theme" rel="stylesheet" type="text/css" media="all" href="~/Content/assets/colors/color1.css" />*@

</head>

<body class="app sidebar-mini ltr">

    <!-- BACKGROUND-IMAGE -->
    <div class="login-img">

        <!-- GLOABAL LOADER -->
        <div id="global-loader">
            <img src="~/Content/assets/images/loader.svg" class="loader-img" alt="Loader">
        </div>
        <!-- /GLOABAL LOADER -->        
        <!-- PAGE -->
        <div class="page">
            @*<div class="">*@
                <!-- CONTAINER OPEN -->
                @*<div class="col col-login mx-auto mt-7">
                    
                </div>*@

                <div class="col col-login mx-auto mt-5">
                    <div class="row">
                        <div class="col-md-6 text-left">
                            <img src="~/Content/assets/images/logomdar.jpg" class="header-brand-img m-0" alt="" style="width: 250px;">
                        </div>
                        <div class="col-md-6 text-end">
                            <img src="~/Content/assets/images/logo agrorural.png" class="header-brand-img m-0" alt="" style="width: 200px;">
                        </div>
                    </div>   
                    <br />
                    <div class="row" style="background-color: #538234;font-weight: bold">
                        <div class="col-md-12 mt-2 ms-5 text-start" style="color:white" >
                            <h3>
                                SISTEMA EN LINEA DE SERVICIOS DE EXTENSION AGRARIA RURAL - SLSEAR
                            </h3>                            
                        </div>
                    </div>
                    @*<div class="row">
                        <div class="col-md-5 text-end">
                            <img src="~/Content/assets/images/logohoja.png" class="header-brand-img m-0" alt="">
                        </div>
                        <div class="col-md-2 text-center">
                            <img src="~/Content/assets/images/logoproceso.png" class="header-brand-img m-0" alt="">
                        </div>
                        <div class="col-md-5 text-left">
                            <img src="~/Content/assets/images/logoregistro.png" class="header-brand-img m-0" alt="">
                        </div>
                    </div>*@
                    <br />
                    <div class="row">
                        <div class="col-12 text-center">
                            <img src="~/Content/assets/images/logohoja.png" class="header-brand-img m-2" alt=""> 
                            
                            <img src="~/Content/assets/images/logoproceso.png" class="header-brand-img m-2" alt=""> 

                            <img src="~/Content/assets/images/logoregistro.png" class="header-brand-img m-2" alt="">
                        </div>
                    </div>
                    <div class="row mt-5">
                        <div class="container-login100">
                            <div class="wrap-login100 p-6">
                                <input type="hidden" name="hdruta" id="hdruta" value="@Url.Action("Index","Indicaciones")" />
                                <input type="hidden" name="hdrutasession" id="hdrutasession" value="@Url.Action("Ingresar","Ciudadano")" />
                                <span class="login100-form-title pb-5">
                                    Iniciar Sesión
                                </span>
                                <div class="panel panel-primary">
                                    <div class="panel-body tabs-menu-body p-0 pt-5">
                                        <div class="tab-content">
                                            <div class="tab-pane active" id="tab5">
                                                <div class="wrap-input100 validate-input input-group" data-bs-validate="Valid email is required: ex@abc.xyz">
                                                    <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                                                        <i class="fe fe-user text-muted" aria-hidden="true"></i>
                                                    </a>
                                                    <input class="input100 border-start-0 form-control ms-0" type="text" placeholder="Usuario" id="txtdni" maxlength="8">
                                                </div>
                                                <div class="wrap-input100 validate-input input-group" id="Password-toggle">
                                                    <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                                                        <i class="zmdi zmdi-eye text-muted" aria-hidden="true"></i>
                                                    </a>
                                                    <input class="input100 border-start-0 form-control ms-0" type="password" placeholder="Password" id="txtpassword">
                                                </div>
                                                <div class="container-login100-form-btn">
                                                    <button class="login100-form-btn btn-primary" id="btningresar">
                                                        Ingresar
                                                    </button>
                                                </div>
                                                <div class="text-end pt-4">
                                                    <p class="mb-0"><a href="@Url.Action("RecuperarPassword", "Ciudadano")" class="text-primary ms-1">Olvidé mi cotraseña?</a></p>
                                                </div>
                                                <div class="text-center pt-3">
                                                    <p class="text-dark mb-0"><a href="@Url.Action("Registro", "Ciudadano")" class="text-primary ms-1">Registrate aquí</a></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <center>
                            <div class="col-5 text-center" style="background-color: #fff3cb">
                                <div style="text-align:justify">
                                    Nota: El <span style="font-weight:bold;color:black">USUARIO</span> que registre la postulación, es quien desempeñará en cargo de <span style="font-weight:bold;color:black">EXTENSIONISTA</span> del SEAR.
                                    <br />
                                    Dicho Usuario será la persona de contracto y a su correo electrónico se remitirán toda comunicación relacionada al concurso.
                                </div>                                
                            </div>
                        </center>                        
                    </div>
                    </div>            
                <!-- CONTAINER CLOSED -->
            @*</div>*@
        </div>
        <!-- End PAGE -->
    </div>
    <!-- BACKGROUND-IMAGE CLOSED -->
    <!-- JQUERY JS -->
    <script src="~/Content/assets/js/jquery.min.js"></script>

    <!-- BOOTSTRAP JS -->
    <script src="~/Content/assets/plugins/bootstrap/js/popper.min.js"></script>
    <script src="~/Content/assets/plugins/bootstrap/js/bootstrap.min.js"></script>

    <!-- SHOW PASSWORD JS -->
    <script src="~/Content/assets/js/show-password.min.js"></script>

    <!-- GENERATE OTP JS -->
    <script src="~/Content/assets/js/generate-otp.js"></script>

    <!-- Perfect SCROLLBAR JS-->
    <script src="~/Content/assets/plugins/p-scroll/perfect-scrollbar.js"></script>

    <!-- Color Theme js -->
    <script src="~/Content/assets/js/themeColors.js"></script>

    <!-- INTERNAL Notifications js -->
    <script src="~/Content/assets/plugins/notify/js/rainbow.js"></script>
    <script src="~/Content/assets/plugins/notify/js/sample.js"></script>
    <script src="~/Content/assets/plugins/notify/js/jquery.growl.js"></script>
    <script src="~/Content/assets/plugins/notify/js/notifIt.js"></script>

    <!-- CUSTOM JS -->
    <script src="~/Content/assets/js/custom.js"></script>
    <script type="text/javascript" src="~/Scripts/CiudadanoRegistro/Login.js?noCache=@Guid.NewGuid().ToString()"></script>
</body>

</html>