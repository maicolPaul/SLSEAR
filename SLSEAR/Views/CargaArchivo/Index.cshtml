
@{
    ViewBag.Title = "Carga de Ficha Técnica";
}

<div class="page-header">
    <h1 class="page-title">Carga de Ficha Técnica</h1>
</div>
<div class="row">
    <form id="frmarchivo">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <input type="hidden" id="hdnusuario" value="@ViewBag.usuario" />
                    <div class="row">
                        <div class="col-sm-6 col-md-6">
                            <div class="form-group">
                                <a href="~/Plantilla/prueba.xlsx">
                                    <button type="button" id="btndescargar" class="btn btn-dark">
                                        <i class="fa fa-download me-2"></i>Descargar
                                    </button>
                                </a>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6">
                            <div class="form-group">
                                <input type="file" class="form-control" name="file" id="file" value="" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-md-6">

                        </div>
                        <div class="col-sm-6 col-md-6">
                            <a href="#">
                                <button type="button" id="btncargar" class="btn btn-green">
                                    <i class="fe fe-upload me-2"></i> Cargar
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    </div>
<script type="text/javascript" src="~/Scripts/CargaArchivo/Index.js?noCache=@Guid.NewGuid().ToString()"></script>