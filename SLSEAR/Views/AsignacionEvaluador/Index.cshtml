
@{
    ViewBag.Title = "Index";
}
<style type="text/css">
    table.dataTable
    td.dt-control {
        text-align: center;
        cursor: pointer
    }

        table.dataTable td.dt-control:before {
            height: 1em;
            width: 1em;
            margin-top: -9px;
            display: inline-block;
            color: white;
            border: .15em solid white;
            border-radius: 1em;
            box-shadow: 0 0 .2em #444;
            box-sizing: content-box;
            text-align: center;
            text-indent: 0 !important;
            font-family: "Courier New",Courier,monospace;
            line-height: 1em;
            content: "+";
            background-color: #31b131
        }

    table.dataTable tr.dt-hasChild td.dt-control:before {
        content: "-";
        background-color: #d33333
    }
</style>
<input type="hidden" id="hdnusuario" value="@ViewBag.usuario" />

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header cardheadertitle">
                <h4 class="card-title">Asignacion de Evaluadores</h4>
            </div>
            <div class="card-body">
                <!--<div class="col-sm-12 col-md-12" style="text-align:right">-->
                @*<button type="button" class="btn btn-success" id="btnagregarcomite"><i class="fa fa-plus-circle" aria-hidden="true"></i>Agregar</button>*@
                <!--</div>-->
                <div class="col-sm-6 col-md-6">
                    <div class="form-group">
                        <label class="form-label">Departamento<span class="text-red">*</span></label>
                        <select class="form-control form-select select2" data-bs-placeholder="Todos" id="cbodepartamento">
                            <option value="" label="Todos">Todos</option>
                        </select>
                    </div>
                </div>
                <table class="table table-bordered text-nowrap border-bottom dataTable" id="tblsears">
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalasignar" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Asignacion de SEAR - Evaluador</h5>
                <button class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                @*<div class="row">
                    <span>Esta Seguro de eliminar el Comite Evaluador?</span>
                </div>*@
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal" id="btncerrar">Cerrar</button>
                <button class="btn btn-primary" id="btnasignar" type="button">Ok</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/AsignacionEvaluador/Index.js?noCache=@Guid.NewGuid().ToString()"></script>