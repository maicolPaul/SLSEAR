
@{
    ViewBag.Title = "Index";
}
<input type="hidden" id="hdnusuario" value="@ViewBag.usuario" />
<br />
<div class="row">
    <div class="col-12">
        <div class="card">
                <div class="card-header cardheadertitle">
                    <h4 class="card-title">5. Registro RUC</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-8 col-md-12">
                            Siga los siguientes pasos:
                            <br />
                            <br />
                            <ol>
                                <li>
                                    Ingresa al registro RUC a través del siguiente enlace:<br /><br />
                                    <a target="_blank" href="https://e-consultaruc.sunat.gob.pe/cl-ti-itmrconsruc/FrameCriterioBusquedaWeb.jsp">https://e-consultaruc.sunat.gob.pe/cl-ti-itmrconsruc/FrameCriterioBusquedaWeb.jsp</a>

                                    <br />
                                    <br />
                                </li>
                                <li>
                                    Descarga el registro RUC
                                </li>
                                <li>
                                    Envía el registro RUC al sistema SEAR con el botón “CARGAR”
                                </li>
                            </ol>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 col-md-4">
                            <div class="form-group">
                                <input type="file" class="form-control" name="file" id="file" value="" />
                            </div>
                        </div>
                        <div class="col-sm-4 col-md4">
                            <button type="button" class="btn btn-success" id="btncargar"><i class="fe fe-upload me-2"></i>Cargar</button>
                        </div>
                    </div>
                    <center>
                        <div class="col-sm-4 col-md-2">
                            <div class="alert alert-danger" role="alert">
                                Solo se admite PDF maximo (10 MB)
                            </div>
                        </div>
                    </center>
                    <br />
                    <div class="text-center">
                        <center>
                            <table id="tblarchivos" class="table table-green" style="width:20% !important">
                                <tbody>
                                    <tr class="table-success">
                                        <td style="color:black">Registro RUC</td>
                                        <td id="filadescargar"><a href="javascript:void(0);" id="ahrefdescargar"><i class="bi bi-file-earmark-pdf"></i></a></td>
                                        <td id="fileeliminar"><a href="javascript:void(0);" id="ahrefeliminar"><i class="bi bi-x-circle-fill"></i></a></td>
                                    </tr>
                                </tbody>
                            </table>
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>
  <script type="text/javascript" src="~/Scripts/RegistroRuc/Index.js?noCache=@Guid.NewGuid().ToString()"></script>
